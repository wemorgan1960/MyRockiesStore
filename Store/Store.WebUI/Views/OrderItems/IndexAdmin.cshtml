@model IEnumerable<Store.Core.Models.OrderItem>

@{
    ViewBag.Title = "OrderItemsDetails";
}

<h2>Order Items Details</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quanity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vin)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Question)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AnswerSubject)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AnswerContent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AnswerTags)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProductName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quanity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Vin)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Question)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AnswerSubject)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AnswerContent)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AnswerTags)
        </td>
        <td>
            @Html.ActionLink("Edit","Edit", "OrderItems", new { id=item.Id }, new { @class = "btn btn-default" })
        </td>
    </tr>
}

</table>
